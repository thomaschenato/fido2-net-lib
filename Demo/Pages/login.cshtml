@page "/login/{handler?}"
@model Fido2Demo.LoginModel
@{
    Layout = "_Layout.cshtml";
}

<div class="section">
    <div class="container">
        <div class="columns">
            <div class="column">

                <h3 class="title">Sign in</h3>
                <form action="/mfa" method="post" id="signin">
                    <div class="columns">
                        <div class="column is-4">
                            <div class="field">
                                <label class="label">Username</label>
                                <div class="control has-icons-left has-icons-right">
                                    <input class="input" style="width: 300px" type="text" placeholder="Enter username" name="username" id="login-username">
                                    <span class="icon is-small is-left">
                                        <i class="fas fa-user"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="field">
                            <label class="label">RP ID</label>
                            <div class="control has-icons-left has-icons-right">
                                <input class="input" style="width: 300px" type="text" placeholder="Enter RP ID" name="rpId">
                                <span class="icon is-small is-left">
                                    <i class="fas fa-user"></i>
                                </span>
                            </div>
                        </div>
                            <div class="field">
                                <label class="label">User verification</label>
                                <div class="control">
                                    <div class="select" style="width: 300px">
                                        <select id="option-userverification" style="width: 300px">
                                            <option value="required">Required</option>
                                            <option selected value="preferred">Preferred</option>
                                            <option value="discouraged">Discouraged</option>
                                        </select>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="column is-4">
                            <div class="field">
                        <fieldset>
                            <legend>User-agent hints</legend>
                            <div class="control has-icons-left has-icons-right">
                                <label class="label">Security key</label>
                                <input type="checkbox" name="userAgentHints" id="security-Key">
                                <label class="label">Client device</label>
                                <input type="checkbox" name="userAgentHints" id="client-device">
                                <label class="label">Hybrid</label>
                                <input type="checkbox" name="userAgentHints" id="hybrid">
                            </div>
                        </fieldset>
                    </div>
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <button class="button is-link">Sign in</button>
                        </div>
                    </div>
                </form>

                <div class="field">
                    <label class="label" for="makeAssertionOptionsResult">Make assertion options result</label>
                    <div class="control">
                        <textarea rows="20" style="min-width:500px; max-width:100%; min-height:50px; height:100%; width:100%;" name="makeAssertionOptionsResult" id="makeAssertionOptionsResult">
                        </textarea>
                    </div>
                </div>

                <div class="field">
                    <label class="label" for="authenticatorResult">Authenticator result</label>
                    <div class="control">
                        <textarea rows="20" style="min-width:500px; max-width:100%; min-height:50px; height:100%; width:100%;" name="authenticatorResult" id="authenticatorResult">
                        </textarea>
                    </div>
                </div>

                <div class="field">
                    <label class="label" for="loginResult">Make assertion result</label>
                    <div class="control">
                        <textarea rows="20" style="min-width:500px; max-width:100%; min-height:50px; height:100%; width:100%;" name="loginResult" id="loginResult">
                        </textarea>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script src="~/js/passkey.login.js"></script>
